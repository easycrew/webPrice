<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd"
	version="2.5">
	
	<listener>
        <listener-class>cn.com.carsmart.sae.web.EnvironmentLoaderListener</listener-class>
    </listener>
    <filter>
        <filter-name>saeFilter</filter-name>
        <filter-class>cn.com.carsmart.sae.web.SaeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>saeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>cn.com.carsmart.util.servlet.LogConfigServletContextListener</listener-class>
    </listener>
    
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>pingonline</servlet-name>
		<servlet-class>cn.com.carsmart.servlet.PingOnlineServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>pingonline</servlet-name>
		<url-pattern>/ws/0.1/ping/online</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>pingversion</servlet-name>
        <servlet-class>cn.com.carsmart.servlet.PingVersionServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>pingversion</servlet-name>
        <url-pattern>/ws/0.1/ping/version</url-pattern>
    </servlet-mapping>
	
	<error-page>
		<error-code>404</error-code>
		<error-code>500</error-code>
		<error-code>503</error-code>
		<location>/error.html</location>
	</error-page>
</web-app>